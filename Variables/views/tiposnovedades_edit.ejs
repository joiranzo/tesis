<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
     <link rel="stylesheet" href="../../css/comun.css">
    <title>Edicion de Tipos de Novedades</title>
</head>

<body>

    <div class="cont-gral">
        <div class="fila_principal">
            <h3>Tipo de Novedad</h3>
            <div class="menu_fila col3">
                <a class="material-symbols-outlined icon bt_azul" href="#" title="Inicio">home</a>
            </div>

        </div>

        <div class="tabla">

            <div class="cabecera">
                <span >Modificación de datos</span>
            </div>

            <div class="cuerpo">
                <% resultado.forEach((novedad)=>{ %>
                <!-- Primera fila -->
                <div class="fila">
                    <!-- Codigo de novedad -->
                    <div class="cont_vert">
                        <label for="">Código</label>
                        <input type="text"  value="<%= novedad.IdTipoNovedad %>">
                    </div>
                    <!-- Descripción -->
                     <div class="cont_vert">
                        <label for="">Nombre</label>
                        <input type="text" value="<%= novedad.Nombre %>">
                    </div>
                     <!-- Rango -->
                     <div class="cont_vert">
                        <label for="">Corresponde Rango</label>
                        <input type="checkbox" 
                        "<% if (novedad.Rango==1) {%> checked <% } %> >
                    </div>
                     <!-- Motivo -->
                     <div class="cont_vert">
                        <label for="">Corresponde Motivo</label>
                        <input type="checkbox"
                        <% if (novedad.Motivo==1) {%> checked <% } %> >
                    </div> 
                </div>    

                <!-- Segunda fila -->
                <div class="fila">    
                     <!-- Limite Diario -->
                     <div class="cont_vert">
                        <label for="">Limite Diario</label>
                        <input type="mail" value="<%= novedad.LimiteDiario %>">
                    </div>
                    <!-- Límite mensual -->
                    <div class="cont_vert">
                        <label for="">Límite Mensual</label>
                        <input type="mail" value="<%= novedad.LimiteMensual %>">
                    </div>
                    <!-- Límite anual -->
                    <div class="cont_vert">
                        <label for="">Límite Anual</label>
                        <input type="mail" value="<%= novedad.LimiteAnual %>">
                         
                    </div>
                   
                </div>

                <!-- Tercera fila -->
                <div class="fila">
                   
                    <!-- Descripción de la novedad-->
                    <div class="cont_vert">
                        <label for="">Descripción</label>
                        <textarea ><%= novedad.Descripcion %></textarea>
                    </div>  
                    <!-- Cuando se usa -->
                    <div class="cont_vert">
                        <label for="">Utilizacion</label>
                        <textarea ><%= novedad.Utilizacion %>"</textarea>
                    </div> 
                    <!-- modo de uso -->
                     <div class="cont_vert">
                        <label for="">Modo de Uso</label>
                        <textarea ><%= novedad.Uso %> </textarea>
                    </div>
                </div>   
                
                <!-- Cuarta fila -->
                <div class="fila" style="justify-content: space-around;">
                   
                    
                </div>    
                    <div class="menu_form">
                        <button class="bt_verde">Aceptar</button>    
                        <a class="bt_rojo" href="/tiponovedad">Cancelar</a>
                    </div>
                
                <% }); %>  
            </div>    
        </div>
    </div>        
</body>

</html>