<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,400,0,0" />
    <link rel="stylesheet" href="../../css/comun.css">
    <link rel="stylesheet" href="../../css/novedades.css">
    <title>Novedades por Gremio</title>
</head>

<body>
    <div class="cont-gral">
        <div class="fila_principal">
            <div class="titulo">Novedades por Gremio</div>
            <div class="fila">
                <label for="">Gremio:</label>    
                <select name="" id="">
                    <% gremios.forEach((gremio)=>{%> 
                    <option value="<%= gremio.IdReprGremial %>"><%= gremio.NomReprGremial %></option> <% }) %>
                </select>
            </div>
            <div class="menu_fila col3">
                <!-- <a class="material-symbols-outlined bt_nuevo" href="#" 
                    id="bt_nuevo">note_add</a> -->
                <a class="material-symbols-outlined icon bt_nuevo" href="index.html"
                    title="Inicio">home</a>
            </div>
        </div>
        
        <div class="cuerpo_novedades">
            <div class="panel_novedades">
                <div class="titulo_novedades"><label for="">Novedades que no corresponden</label></div>
                <div class="novedades" id="no">
                    <%tiposnovedades.forEach((novedad)=>{ %>    
                        <div class="novedad" style="font-size: small;" name="nocorresponde" >
                            <label > <%=novedad.IdTipoNovedad %></label> 
                            <label> <%=novedad.Nombre %></label>
                        </div>
                    <% })%>
                </div>
            </div>
            <div class="control_novedades">
                <button id="btn_activar" class="material-symbols-outlined">arrow_forward_ios</button>
                <button id="btn_desactivar"class="material-symbols-outlined">arrow_back_ios</button>
            </div>
            <div class="panel_novedades">
                <div class="titulo_novedades"><label for="">Novedades que corresponden</label></div>
                <div class="novedadades" id="si">
                              
                </div>
            </div>    
        </div>
    </div>
</body>
<script src="/js/novedadesxgremio.js"></script>
</html>