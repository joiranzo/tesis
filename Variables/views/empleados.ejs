<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="../../css/comun.css">
    <title>Empleados</title>
</head>

<body>

    <div class="cont-gral">
        <div class="fila_principal">
            <h3>Empleados</h3>
            <div class="menu_fila col3">
                <a class="material-symbols-outlined bt_azul" href="#" 
                    title="Nuevo">note_add</a>
                <a class="material-symbols-outlined icon bt_azul" href="#"
                    title="Inicio">home</a>
            </div>

        </div>

        <div class="tabla">

            <div class="cabecera">
                <span class="col1">Legajo</span>
                <span class="col2">Apellido y Nombre</span>
                
            </div>

            <div class="cuerpo" id="buscar">
                <% empleados.forEach((dato)=>{ %>
                    <div class="fila">
                        <label class="col1">
                            <%= dato.Legajo %>
                        </label>
                        <label class="col2">
                            <%= dato.NomApe %>
                        </label> 
                        <div class="menu_fila col3">
                            <a class="material-symbols-outlined bt_azul"  
                            href="#" title="Editar">Edit</a>    
                        </div>
                    </div>    
                <% }); %>

            </div>
            <div class="cuerpo" id="editar">
                
                
                <div class="fila">
                
                    <div class="cont_vert">
                        <label for="">Legajo</label>
                        <input type="text"  id="Legajo" name="Legajo" value="">
                    </div>
                
                     <div class="cont_vert">
                        <label for="">Nombre</label>
                        <input type="text" id="NomApe" name="NomApe" value="">
                    </div>
                
                    <div class="cont_vert">
                        <label for="">Direcci贸n de Email</label>
                        <input type="mail" id="Email" name="Email" value="">
                    </div>
                </div>    

                
                <div class="fila">    
                
                    <div class="cont_vert">
                        <label for="">Especialidad</label>
                        <select >
                                <%  puestos.forEach((dato)=>{ %>
                                    <option value="<%= dato.IdPuesto %> "> <%= dato.NomPuesto %></option>
                                <%}); %>
                            
                        </select> 
                    </div>
                
                    <div class="cont_vert">
                        <label for="">Reprecentaci贸n Gremial</label>
                        <select>
                            <%  gremios.forEach((dato)=>{ %>
                                <option value="<%= dato.IdReprGremial %> "> <%= dato.NomReprGremial %></option>
                            <%}); %>                                
                        </select> 
                    </div>
                
                    <div class="cont_vert">
                        <label for="">Superior Inmediato</label>
                        <select>
                            <%  supinmeds.forEach((dato)=>{ %>
                                <option value="<%= dato.IdSupInmed %> "> <%= dato.NomSupInmed %></option>
                            <%}); %>
                        </select> 
                    </div> 
                </div>

                
                <div class="fila">
                
                    <div class="cont_vert">
                        <label for="">Supervisi贸n</label>
                        <select>
                            <%  supervisiones.forEach((dato)=>{ %>
                                <option value="<%= dato.IdSupervision %> "> <%= dato.NomSupervision %></option>
                            <%}); %>
                        </select> 
                    </div>
                
                    <div class="cont_vert">
                        <label for="">SubRegi贸n</label>
                        <select>
                            <%  subregiones.forEach((dato)=>{ %>
                                <option value="<%= dato.IdSubRegion %> "> <%= dato.NomSubRegion %></option>
                            <%}); %>
                        </select>
                    </div>  
                
                    <div class="cont_vert">
                        <label for="">Encargado de Tiempo</label>
                        <select>
                            <%  encargados.forEach((dato)=>{ %>
                                <option value="<%= dato.IdEncargado %> "> <%= dato.NomEncargado %></option>
                            <%}); %>
                        </select>
                    </div> 
                </div>   
                
                
                <div class="fila" style="justify-content: space-around;">
                
                    <div class="cont_vert">
                        <label for="">Coordinador</label>
                        <select name="" id="">
                            <%  coordinadores.forEach((dato)=>{ %>
                                <option value="<%= dato.IdCoordinador %> "> <%= dato.NomCoordinador %></option>
                            <%}); %>
                        </select>
                    </div>
                
                    <div class="cont_vert">
                        <label for="">Coordinacion</label>
                        <select>
                            <%  coordinaciones.forEach((dato)=>{ %>
                                <option value="<%= dato.IdCoordinacion %> "> <%= dato.NomCoordinacion %></option>
                            <%}); %>
                                
                        </select> 
                    </div>
                </div>     
                    <div class="menu_form">
                        <button class="bt_verde">Aceptar</button>
                        <button class="bt_rojo">Borrar</button>        
                        <a class="bt_rojo" href="/empleado">Cancelar</a>
                    </div>
                
              
        </div>

    </div>
</body>
<script src="/js/empleado.js"></script>

</html>